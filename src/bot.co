Player = require \./player

nop = ->

class Bot extends Player
  ->
    super!

  isBot: true
  name: \bot
  send: nop

  sendPack: ->
    process.nextTick @~botpick

  botpick: ->
    _score = Infinity
    for card, i of @packs.0
      if card is undefined
        return @emit \err
      {score} = card
      if score < _score
        _score = score
        index = i
    @pick index

module.exports = Bot
